{
  "collectionName": "components_meta_metadata",
  "info": {
    "name": "Metadata",
    "icon": "anchor",
    "description": "To improve SEO"
  },
  "options": {},
  "attributes": {
    "jsonLD": {
      "type": "json"
    },
    "canonicalUrl": {
      "type": "text",
      "regex": "^https?://",
      "required": true,
      "default": "https://beammeup.today"
    },
    "metaTitle": {
      "type": "string",
      "required": true
    },
    "metaDescription": {
      "type": "text",
      "required": true
    },
    "shareImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "twitterCardType": {
      "type": "enumeration",
      "enum": [
        "summary",
        "summary_large_image",
        "app",
        "player"
      ],
      "default": "summary"
    },
    "twitterUsername": {
      "type": "string"
    }
  }
}
